{
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "module": "NodeNext",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "resolveJsonModule": true,
        "rootDir": "./src"
    },
    "exclude": ["src/**/*.md", "src/**/templates/**", "dist"]
}
